  <style>
    label {
      display: block;
      margin-bottom: 10px;
    }
    input[type="text"], textarea {
      width: 300px;
      padding: 5px;
      font-size: 16px;
    }
    textarea {
      height: 100px;
    }
    input[type="submit"] {
      padding: 10px 20px;
      font-size: 16px;
      margin-top: 10px;
    }
    .form-center {
      display: flex;
      flex-direction: column;
      align-items: center;
      text-align: center;
    }
    .alert {
      display: none;
      padding: 10px 20px;
      font-size: 16px;
      background-color: #ffc107;
      color: #333;
      border-radius: 5px;
      margin-top: 10px;
    }
    .fade {
      opacity: 1;
      transition: opacity 0.5s ease-in-out;
    }
    .fade.out {
      opacity: 0;
    }
  </style>

<body>
  <center>
    <h1 style="margin-bottom: 20px;">Add Your Favorite Restaurant!</h1>
    <p>Cant find your favorite restaurant on our website?</p>
    <p>Fill out a form, and our team will do the rest :)</p>
    <form id="restaurantForm" class="form-center">
      <label for="name">Restaurant Name:</label>
      <input type="text" id="name" name="name" required>

      <label for="location">Location:</label>
      <input type="text" id="location" name="location" required>

      <label for="description">Description:</label>
      <textarea id="description" name="description" required></textarea>

      <input type="submit" value="Submit Request">
    </form>
    <div id="flashMessage" class="alert"></div>
  </center>

  <script>
    document.getElementById("restaurantForm").addEventListener("submit", function(event) {
      event.preventDefault();
      var name = document.getElementById("name").value;
      var location = document.getElementById("location").value;
      var description = document.getElementById("description").value;

      // Here, you can perform additional validation or send the data to a server for processing

      // Clear form fields after submission
      document.getElementById("name").value = "";
      document.getElementById("location").value = "";
      document.getElementById("description").value = "";

      var flashMessage = document.getElementById("flashMessage");
      flashMessage.textContent = "Thank you for your request! We will review it soon.";
      flashMessage.style.display = "block";
      flashMessage.classList.add("fade");
      setTimeout(function() {
        flashMessage.classList.add("out");
        setTimeout(function() {
          flashMessage.remove();
        }, 500); // Fade-out duration (in milliseconds)
      }, 2000); // Display duration (in milliseconds)
    });
  </script>
