    /* Flash Alert */
    .flash-alert {
      display: none;
      background-color: #C0C0C0;
      color: #fff;
      text-align: center;
      padding: 10px;
      border-radius: 4px;
      margin-top: 10px;
    }
    .contact-info {
      text-align: center;
      margin-top: 40px;
    }
    
    .contact-info p {
      margin-bottom: 10px;
