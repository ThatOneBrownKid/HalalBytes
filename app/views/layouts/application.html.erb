<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>HalalBytes</title>
    <%= favicon_link_tag 'HalalBytes.ico' %>
    <%= csrf_meta_tags %>
    <%= javascript_importmap_tags %>
    <%= stylesheet_link_tag "application" %>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">
    <link rel="stylesheet" href="//cdnjs.cloudflare.com/ajax/libs/timepicker/1.3.5/jquery.timepicker.min.css">
    <link href="https://cdn.jsdelivr.net/npm/quill@2.0.3/dist/quill.snow.css" rel="stylesheet">
    <link href="https://unpkg.com/dropzone@6.0.0-beta.1/dist/dropzone.css" rel="stylesheet" type="text/css" />
    <link href="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/css/select2.min.css" rel="stylesheet" />

    <script src="https://cdn.jsdelivr.net/npm/quill@2.0.3/dist/quill.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/js/select2.min.js"></script>
    <!-- Google tag (gtag.js) -->
    <script async src="https://www.googletagmanager.com/gtag/js?id=G-CJM0VENVMF"></script>
    <script>
      window.dataLayer = window.dataLayer || [];
      function gtag(){dataLayer.push(arguments);}
      gtag('js', new Date());

      gtag('config', 'G-CJM0VENVMF');
    </script>
  </head>
  <body>
    <% flash.each do |key, value| %>
      <% if key.to_s == 'notice' %>
        <div class="alert alert-dark fixed-top start-50 translate-middle-x" style="margin-top: 80px; width: fit-content; max-width: 100%;" role="alert">
          <%= value %>
        </div>
      <% end %>
    <% end %>
    <% flash.each do |key, value| %>
      <% if key.to_s == 'error' %>
        <div class="alert alert-dark fixed-top start-50 translate-middle-x" style="margin-top: 80px; width: fit-content; max-width: 100%; background-color: rgba(255, 0, 0, 0.5);
          color: white;" role="alert">
          <%= value %>
        </div>
      <% end %>
    <% end %>
    <%= render 'home/navbar'%>
    <%= yield %>
  </body>
</html>
<script>
  document.addEventListener("turbo:load", function() {
    var notifications = document.querySelectorAll(".alert:not(#password-alert,#login-alert)");

    if (notifications.length > 0) {
      setTimeout(function() {
        notifications.forEach(function(notification) {
          notification.classList.add("fade");
          setTimeout(function() {
            notification.remove();
          }, 500); // Fade-out duration (in milliseconds)
        });
      }, 1500); // Display duration (in milliseconds)
    }
  });
</script>
<script>
  document.addEventListener("turbo:load", function() {
    var notifications = document.querySelectorAll(".alert.error");

    if (notifications.length > 0) {
      setTimeout(function() {
        notifications.forEach(function(notification) {
          notification.classList.add("fade");
          setTimeout(function() {
            notification.remove();
          }, 500); // Fade-out duration (in milliseconds)
        });
      }, 2000); // Display duration (in milliseconds)
    }
  });
</script>
<script>
  document.addEventListener("turbo:load", function() {
    var noticeNotifications = document.querySelectorAll(".alert.notice");

    if (noticeNotifications.length > 0) {
      setTimeout(function() {
        noticeNotifications.forEach(function(notification) {
          notification.classList.add("fade");
          setTimeout(function() {
            notification.remove();
          }, 500); // Fade-out duration (in milliseconds)
        });
      }, 2000); // Display duration (in milliseconds) specifically for notices
    }
  });
</script>
