<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Halal C-Bus</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-KK94CHFLLe+nY2dmCWGMq91rCGa5gtU4mk92HdvYe+M/SXH301p5ILy+dN9+nJOZ" crossorigin="anonymous">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.6.0/font/bootstrap-icons.css" rel="stylesheet"> 
  </head>

  <body>
    <% flash.each do |key, value| %>
    <% if key.to_s == 'notice' %>
      <div class="alert alert-dark fixed-top start-50 translate-middle-x" style="margin-top: 80px; width: fit-content; max-width: 100%;" role="alert">
        <%= value %>
      </div>
    <% end %>
  <% end %>
    
      <%= render 'home/navbar'%>
      <%= yield %>
      <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ENjdO4Dr2bkBIFxQpeoTz1HIcje39Wm4jDKdf19U8gI4ddQ3GYNS7NTKfAdVQSZe" crossorigin="anonymous"></script>
  </body>
</html>

<script>
  document.addEventListener("DOMContentLoaded", function() {
  var notifications = document.querySelectorAll(".alert:not(#password-alert)");

  if (notifications.length > 0) {
    setTimeout(function() {
      notifications.forEach(function(notification) {
        notification.classList.add("fade");
        setTimeout(function() {
          notification.remove();
        }, 500); // Fade-out duration (in milliseconds)
      });
    }, 2000); // Display duration (in milliseconds)
  }
});

</script>
